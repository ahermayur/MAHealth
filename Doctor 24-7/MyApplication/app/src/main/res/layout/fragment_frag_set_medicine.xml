<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mayur.doctor24_7.Doctor.frag_setMedicine">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/textView"
        app:cardBackgroundColor="@android:color/darker_gray"
        android:layout_marginTop="21dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_medicine_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/pill32"
                        android:gravity="center_vertical"
                        android:hint="Medicine Name"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/holo_purple" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#000"
                            android:text="Quantity : "
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_height="wrap_content" />

                        <Spinner
                            android:id="@+id/sp_medicine_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawSelectorOnTop="true"
                            android:entries="@array/month"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#000"
                            android:text="Timeing : "
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:drawSelectorOnTop="true"
                            android:textColor="#000"
                            android:entries="@array/time"
                            android:id="@+id/sp_medicine_time"
                            android:layout_width="wrap_content"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </LinearLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textColor="#000"
                        android:drawableLeft="@drawable/fab_add"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:id="@+id/btn_addmedicine"
                        android:drawableTint="@color/colorAccent"
                        android:textAppearance="?android:textAppearanceMedium"
                        />
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/container1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        </LinearLayout>
                    </ScrollView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:drawableLeft="@drawable/save"
                        android:text="Save"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
