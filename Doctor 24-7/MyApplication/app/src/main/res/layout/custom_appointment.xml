<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Dr. Name"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ff00ddff" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sd_specility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Specility" />

                <TextView
                    android:id="@+id/tv_sd_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:text="Address" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_sd_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="E-Mail"
                    android:textColor="#0a0" />

                <TextView
                    android:id="@+id/tv_sd_contactno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Contact No"
                    android:textColor="#a00" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="5dp"
        android:layout_width="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#000"
                android:textAppearance="?android:textAppearanceMedium"
                android:paddingLeft="5dp"
                android:gravity="center_horizontal|center"
                android:paddingRight="20dp"
                android:drawablePadding="5dp"
                android:text="Select Appointment Date"
                android:inputType="date"
                android:drawableRight="@drawable/calendar"
                android:layout_marginBottom="15dp"
                android:id="@+id/tv_appointment_date" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_sd_ok"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="?attr/actionModeSplitBackground"
                    android:text="Cancle"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textAllCaps="false" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:layout_margin="10dp"
                    android:id="@+id/btn_book_appointment"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="?attr/actionModeSplitBackground"
                    android:text="Book Appointment"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>
</LinearLayout>