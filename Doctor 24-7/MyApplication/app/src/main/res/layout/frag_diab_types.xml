<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayur.diabetesinfo.frag_diab_types">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:id="@+id/cv_med1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffaa66cc"
        android:paddingLeft="10dp"
        android:textStyle="bold"

        android:layout_height="wrap_content"
        android:id="@+id/txt_type" />
        <TextView
            android:text=""

            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_below="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_typdec" />
        <TextView
            android:text="  "
            android:textSize="20dp"
            android:textStyle="italic"
            android:drawableLeft="@drawable/frist"
            android:textColor="#ffaa66cc"
            android:paddingLeft="5dp"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_type1" />
        <TextView
            android:text=""
            android:paddingLeft="10dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_typdec1" />
        <TextView
            android:text=""
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:textColor="#ffaa66cc"
            android:textStyle="italic"
            android:drawableLeft="@drawable/sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_typdec11" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_typdec12" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>
